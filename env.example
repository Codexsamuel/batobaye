# ===========================================
# Configuration Batobaye Market
# ===========================================
# Copiez ce fichier vers .env.local et configurez vos valeurs

# ===========================================
# BASE DE DONNÉES
# ===========================================
# URL de connexion PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/batobaye_db"

# ===========================================
# APIs EXTERNES
# ===========================================


# Clé API OpenAI pour l'assistant IA
OPENAI_API_KEY="your-openai-api-key-here"

# ===========================================
# CONFIGURATION DU SITE
# ===========================================
# URL WhatsApp de contact
NEXT_PUBLIC_WHATSAPP_URL="https://wa.me/237672027744"

# URL du site (développement)
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
# URL du site (production)
# NEXT_PUBLIC_SITE_URL="https://batobaye-market.com"

# Informations de l'entreprise
NEXT_PUBLIC_SITE_NAME="Batobaye Market"
NEXT_PUBLIC_SITE_DESCRIPTION="Votre marketplace de confiance au Cameroun"
NEXT_PUBLIC_BUSINESS_PHONE="+237 672 02 77 44"
NEXT_PUBLIC_BUSINESS_ADDRESS="Akwa, Douala, Cameroun"
NEXT_PUBLIC_BUSINESS_HOURS="Lun-Sam: 8h-20h"
NEXT_PUBLIC_BUSINESS_EMAIL="contact@batobaye.com"

# ===========================================
# AUTHENTIFICATION CLERK
# ===========================================
# Clés Clerk pour l'authentification
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your-clerk-publishable-key"
CLERK_SECRET_KEY="sk_test_your-clerk-secret-key"
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/admin/login"

# ===========================================
# ANALYTICS (OPTIONNEL)
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Facebook Pixel
NEXT_PUBLIC_FACEBOOK_PIXEL_ID="XXXXXXXXXX"

# ===========================================
# CLOUDINARY (OPTIONNEL)
# ===========================================
# Pour le stockage d'images
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ===========================================
# NOTES IMPORTANTES
# ===========================================
# 1. Ne commitez jamais le fichier .env.local
# 2. Utilisez des clés de test pour le développement
# 3. Configurez les vraies clés en production
# 4. Vérifiez que toutes les variables NEXT_PUBLIC_* sont bien exposées 